<%- include('../layouts/header') %>
    <%- include('../layouts/sidebar') %>
        <!--begin::Main-->
        <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
            <div class="d-flex flex-column flex-column-fluid">
                <div id="kt_app_toolbar" class="app-toolbar pt-5">
                    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                        <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                            <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                                <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                        <a href="../dist/index.html" class="text-gray-500">
                                            <i class="ki-duotone ki-home fs-3 text-gray-400 me-n1"></i>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                                    </li>
                                    <a href="/dashboard">
                                        <li class="breadcrumb-item ms-2 text-gray-700 fw-bold lh-1">Dashboard</li>
                                    </a>
                                    <li class="breadcrumb-item">
                                        <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                                    </li>
                                    <a href="/resetpassword">
                                        <li class="breadcrumb-item ms-2 text-gray-700 fw-bold lh-1">Reset Password</li>
                                    </a>
                                </ul>
                                <h1
                                    class="page-heading d-flex flex-column justify-content-center text-dark fw-bolder fs-1 lh-0">
                                    Reset Password</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="kt_app_content" class="app-content flex-column-fluid">
                    <div id="kt_app_content_container" class="app-container container-fluid">
                        <div class="card mb-5 mb-xl-10">
                            <div class="collapse show">
                                <div class="card-body border-top p-9">
                                    <div class="d-flex flex-wrap align-items-center mb-10">
                                        <div class="flex-row-fluid">
                                            <form class="form" action="/resetpassword" method="post">
                                                <% if (typeof message !=='undefined' ) { %>
                                                    <div
                                                        class="alert alert-dismissible bg-light-danger d-flex flex-column flex-sm-row p-5 mb-10">
                                                        <i
                                                            class="ki-duotone ki-notification-bing fs-2hx text-danger me-4 mb-5 mb-sm-0"><span
                                                                class="path1"></span><span class="path2"></span><span
                                                                class="path3"></span></i>
                                                        <div class="d-flex flex-column pe-0 pe-sm-10">
                                                            <h4 class="fw-semibold">Reset Password</h4>
                                                            <span class="fw-bold">
                                                                <%= message %>

                                                            </span>
                                                        </div>
                                                        <button type="button"
                                                            class="position-absolute position-sm-relative m-2 m-sm-0 top-0 end-0 btn btn-icon ms-sm-auto"
                                                            data-bs-dismiss="alert">
                                                            <i class="ki-duotone ki-cross fs-1 text-danger"><span
                                                                    class="path1"></span><span class="path2"></span></i>
                                                        </button>
                                                    </div>
                                                    <% } %>
                                                        <div class="row mb-1">
                                                            <div class="col-lg-4">
                                                                <div class="fv-row mb-0">
                                                                    <label for="currentpassword"
                                                                        class="form-label fs-6 fw-bold mb-3">Current
                                                                        Password</label>
                                                                    <input type="password"
                                                                        class="form-control form-control-lg form-control-solid"
                                                                        name="oldpassword"
                                                                        placeholder="Enter Current Password" required />
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4">
                                                                <div class="fv-row mb-0">
                                                                    <label for="newpassword"
                                                                        class="form-label fs-6 fw-bold mb-3">New
                                                                        Password</label>
                                                                    <input type="password"
                                                                        class="form-control form-control-lg form-control-solid"
                                                                        name="password" placeholder="Enter New Password"
                                                                        required />
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4">
                                                                <div class="fv-row mb-0">
                                                                    <label for="confirmpassword"
                                                                        class="form-label fs-6 fw-bold mb-3">Confirm
                                                                        New
                                                                        Password</label>
                                                                    <input type="password"
                                                                        class="form-control form-control-lg form-control-solid"
                                                                        name="cpassword"
                                                                        placeholder="Enter Confirm Password" required />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-text mb-5">Password must be at least 8
                                                            character and contain symbols</div>
                                                        <div class="d-flex">
                                                            <button type="submit"
                                                                class="btn btn-primary me-2 px-6">Update
                                                                Password</button>
                                                        </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../layouts/aside') %>